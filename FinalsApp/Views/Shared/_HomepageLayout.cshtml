<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />

    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Materialize and SweetAlert -->
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link href="~/Content/img/vecteezy_watercolor-painted-feather_11904796.png" rel="icon">
    <title>@ViewBag.Title</title>

    <style>
        /*Roots - Navbar*/
        :root {
            /*Navbar color elements*/
            --nav-color: #49111C;
            --nav-hover-color: #a9927d;
            --nav-text-color: #F2F4F3;
        }

        :root {
            /*Main color elements*/
            --hero-title-color: #F2F4F3;
            --hero-subs-color: #F2F4F3;
            --hero-btn-color: #53503f;
        }

        :root {
            --footer-text-color: black;
            --footer-line-color: #49111C;
        }

        /* Fonts */
        @@font-face {
            font-family: 'DellaRespira-Regular';
            src: url(/Content/fonts/DellaRespira-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Regular';
            src: url(/Content/fonts/Montserrat-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Medium';
            src: url(/Content/fonts/Montserrat-Medium.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-MediumItalic';
            src: url(/Content/fonts/Montserrat-MediumItalic.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Bold';
            src: url(/Content/fonts/Montserrat-Bold.ttf)
        }

        @@font-face {
            font-family: 'NTR-Regular';
            src: url(/Content/fonts/NTR-Regular.ttf)
        }

        body {
            margin: 0;
            padding: 0;
        }

        /* Header */

        nav {
            background: linear-gradient(90deg, #0A0908, #49111C);
            height: 90px; /* Adjust to fit the logo perfectly */
            display: flex;
            align-items: center; /* Vertically align items */
            padding: 0 20px; /* Add horizontal padding for better spacing */
        }

        /* Logo */
        .logo {
            display: flex;
            align-items: center;
            margin-right: auto; /* Push the logo to the left */
            margin-left: 100px;
        }

        .logo-img {
            height: 70px; /* Fixed height for logo */
            width: auto; /* Maintain aspect ratio */
        }

        /*Nav Menu*/
        .nav-wrapper {
            display: flex;
            flex-grow: 1;
            padding: 0;
            justify-content: flex-end;
        }

            .nav-wrapper ul {
                margin: 0;
                padding: 0;
                display: flex;
                align-items: center; /* Align items vertically */
                list-style: none;
                font-family: Montserrat-Medium;
            }

                .nav-wrapper ul li {
                    margin-right: 50px; /* Add spacing between nav items */
                }

                    .nav-wrapper ul li a {
                        font-size: 15px;
                        color: var(--nav-text-color);
                        padding: 0 5px; /* Space between links */
                        text-decoration: none;
                    }

                        .nav-wrapper ul li a:hover {
                            color: var(--nav-hover-color);
                            background-color: transparent;
                        }

                    .nav-wrapper ul li:active a {
                        color: #A9927D;
                    }

        /*Main Content*/
        .hero {
            position: relative;
            display: flex;
            align-items: center; /* Centers content vertically */
            justify-content: center; /* Centers content horizontally */
            height: 95vh; /* Makes the hero section full screen */
            overflow: hidden; /* Ensures no overflow from the image */
        }

            .hero img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensures the image covers the section */
                z-index: 1; /* Places the image behind the content */
            }

            .hero .container {
                position: relative;
                z-index: 3;
                text-align: center;
                font-family: DellaRespira-Regular;
                color: var(--hero-title-color);
            }

            .hero h1 {
                margin: 0;
                font-size: 100px;
                font-weight: 700;
            }

            .hero p {
                margin: 10px 0 0 0;
                font-size: 24px;
                color: var(--hero-subs-color);
            }

        .started {
            margin-top: 30px;
            background-color: #fff;
            border: 0 solid #e2e8f0;
            border-radius: 1.5rem;
            box-sizing: border-box;
            color: #FFFFFF;
            cursor: pointer;
            display: inline-block;
            font-family: DellaRespira-Regular;
            font-size: 1.5rem;
            font-weight: 600;
            line-height: 1;
            padding: 1rem 1.6rem;
            text-align: center;
            text-decoration: none #0d172a solid;
            transition: all .1s cubic-bezier(.4, 0, .2, 1);
            box-shadow: 0px 1px 2px rgba(166, 175, 195, 0.25);
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }

            .started:hover {
                background-color: #53503f;
                color: #53503f;
            }

            .started:after {
                background-color: #F2F4F3;
                color: black;
            }

        /* Footer Styling */
        footer {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            font-family: Montserrat-Medium;
        }

        .page-footer {
            background-color: white;
            margin-top: -10px;
            margin-bottom: 10px;
        }

        .footer-container {
            max-width: 100%; /* Prevent any child from overflowing */
            margin: 0 auto; /* Center the container */
            padding: 0 15px; /* Add some horizontal padding */
            display: flex;
            justify-content: space-between; /* Space out logo and links */
            align-items: center; /* Vertically center items */
            flex-wrap: wrap; /* Wrap items to the next line if needed */
        }


        .footer-logo {
            flex: 0 0 auto; /* Prevents the logo from growing/shrinking */
            margin-left: 80px;
        }

        .footer-img {
            height: 90px; /* Adjust height as needed */
            width: auto; /* Maintain aspect ratio */
        }

        .footer-links {
            flex: 0 0 auto; /* Prevents the links from growing/shrinking */
            margin-right: 80px;
        }

            .footer-links ul {
                padding: 0;
                list-style: none;
                display: flex;
                flex-direction: column; /* Stack items vertically */
                gap: 10px; /* Add space between the links */
            }

                .footer-links ul li a {
                    color: #333; /* Link color */
                    text-decoration: none; /* Remove underline */
                    font-size: 14px; /* Adjust font size */
                    font-weight: 300;
                }

                    .footer-links ul li a:hover {
                        color: #800020; /* Highlight color */
                    }

        /*Copyright*/
        .copyright {
            margin: 0;
            background-color: #808080;
            text-align: center; /* Centers the text horizontally */
            padding: 10px 0; /* Adds vertical spacing */
            color: white; /* Ensures text is readable */
        }

            .copyright p {
                margin: 0 0 0 0;
                padding: 0 0 0 0;
            }

        /*Sidenav - responsive menu*/
        i {
            margin-top: 10px;
            margin-right: 50px;
        }

        .sidenav {
            background-color: white;
        }

            .sidenav li {
                margin-top: 20px;
            }

                .sidenav li a {
                    font-weight: 500;
                    font-size: 15px;
                }

                    .sidenav li a:hover {
                        color: #49111C;
                        background-color: #a9927d;
                    }

        /*Custom Scrollbar*/
        /* width */
        ::-webkit-scrollbar {
            width: 15px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #0A0908;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>
</head>

<body ng-app="FinalsApplication" ng-controller="FinalsController">
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Sidenav
            const elems = document.querySelectorAll('.sidenav');
            M.Sidenav.init(elems, {edge: 'right'});
        });
    </script>
</body>
</html>
