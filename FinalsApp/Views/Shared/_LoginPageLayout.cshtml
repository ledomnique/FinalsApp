<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" />
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/Content/img/vecteezy_watercolor-painted-feather_11904796.png" rel="icon">
    <!-- Materialize and SweetAlert -->
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>

        /* Fonts */
        @@font-face {
            font-family: 'DellaRespira-Regular';
            src: url(/Content/fonts/DellaRespira-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Regular';
            src: url(/Content/fonts/Montserrat-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Medium';
            src: url(/Content/fonts/Montserrat-Medium.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-MediumItalic';
            src: url(/Content/fonts/Montserrat-MediumItalic.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Bold';
            src: url(/Content/fonts/Montserrat-Bold.ttf)
        }

        @@font-face {
            font-family: 'NTR-Regular';
            src: url(/Content/fonts/NTR-Regular.ttf)
        }


        body {
            margin: 0;
            padding: 0;
            font-family: Montserrat-Regular;
            background: url(/Content/img/loginbg.jpg) rgba(0, 0, 0, 0.5) no-repeat center center;
            background-size: cover;
            background-blend-mode: overlay;
            min-height: 100vh;
        }

        header {
            position: sticky; /* Ensure it stays at the top when scrolling */
            top: 0;
            z-index: 1000; /* Keep it above other content */
        }

        .container {
            margin: 100px auto 50px; /* Add space from the navbar (100px) */
            position: relative;
            width: 850px;
            height: 550px;
            background: #fff;
            border-radius: 30px;
            box-shadow: 0 0 30px rgba(0, 0, 0, .2);
            overflow: hidden;
            display: flex; /* Center the content inside the container */
            justify-content: center;
            align-items: center;
        }


        .form-box {
            position: absolute;
            right: 0;
            width: 50%;
            height: 100%;
            background: #fff;
            display: flex;
            align-items: center;
            color: #333;
            text-align: center;
            padding: 40px;
            z-index: 1;
            transition: .6s ease-in-out 1.2s, visibility 0s 1s;
        }

        .container.active .form-box {
            right: 50%;
        }

        .form-box.register {
            visibility: hidden;
        }

        .container.active .form-box.register {
            visibility: visible;
        }

        form {
            width: 100%;
        }

        .container h1 {
            font-family: DellaRespira-Regular;
            font-size: 36px;
            margin: -10px 0;
        }

        .input-box {
            position: relative;
            margin: 30px 0;
        }

            .input-box input {
                width: 100%;
                padding: 13px 50px 13px 20px;
                background: #eee;
                border-radius: 8px;
                border: none;
                outline: none;
                font-size: 16px;
                color: #333;
                font-weight: 500;
            }

                .input-box input::placeholder {
                    color: #888;
                    font-weight: 400;
                }

            .input-box i {
                position: absolute;
                right: -46px;
                top: 32%;
                transform: translateY(-50%);
                font-size: 20px;
            }

        .forgot-link {
            margin: -15px 0 15px;
        }

            .forgot-link a {
                font-size: 14.5px;
                color: #333;
                text-decoration: none;
            }

        .btn {
            width: 100%;
            height: 48px;
            background: #A9927D;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,.1);
            border: none;
            cursor: pointer;
            font-size: 16px;
            color: #fff;
            font-weight: 600;
        }

            .btn:hover {
                background: #A9927D;
            }

        .container p {
            font-family: Montserrat-Regular;
            text-align: center;
            font-size: 13px;
            margin: 15px 0;
        }

        .toggle-box {
            position: absolute;
            width: 100%;
            height: 100%;
        }

            .toggle-box::before {
                content: '';
                position: absolute;
                left: -250%;
                width: 300%;
                height: 100%;
                background: #49111C;
                border-radius: 150px;
                z-index: 2;
                transition: 1.8s ease-in-out;
            }

        .container.active .toggle-box::before {
            left: 50%;
        }

        .toggle-panel {
            position: absolute;
            width: 50%;
            height: 100%;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 2;
            transition: .6s ease-in-out;
        }

            .toggle-panel.toggle-left {
                left: 0;
                transition-delay: 1.2s;
            }

        .container.active .toggle-panel.toggle-left {
            left: -50%;
            transition-delay: .6s;
        }

        .toggle-panel.toggle-right {
            right: -50%;
            transition-delay: .6s;
        }

        .container.active .toggle-panel.toggle-right {
            right: 0;
            transition-delay: 1.2s;
        }

        .toggle-panel p {
            margin-bottom: 20px;
        }

        .toggle-panel .btn {
            width: 160px;
            height: 46px;
            background: transparent;
            border: 2px solid #fff;
            box-shadow: none;
        }

        @@media screen and (max-width: 650px) {
            .container {
                height: calc(100vh - 40px);
            }

            .form-box {
                bottom: 0;
                width: 100%;
                height: 70%;
            }

            .container.active .form-box {
                right: 0;
                bottom: 30%;
            }

            .toggle-box::before {
                left: 0;
                top: -270%;
                width: 100%;
                height: 300%;
                border-radius: 20vw;
            }

            .container.active .toggle-box::before {
                left: 0;
                top: 70%;
            }

            .toggle-panel {
                width: 100%;
                height: 30%;
            }

                .toggle-panel.toggle-left {
                    top: 0;
                }

            .container.active .toggle-panel.toggle-left {
                left: 0;
                top: -30%;
            }

            .toggle-panel.toggle-right {
                right: 0;
                bottom: -30%;
            }

            .container.active .toggle-panel.toggle-right {
                bottom: 0;
            }
        }

        @@media screen and (max-width: 400px) {
            .form-box {
                padding: 20px;
            }

            .toggle-panel h1 {
                font-size: 30px;
            }
        }

        /* Root components */
        :root {
            /*Navbar color elements*/
            --nav-color: #49111C;
            --nav-hover-color: #a9927d;
            --nav-text-color: #F2F4F3;
        }

        :root {
            /*Main color elements*/
            --hero-title-color: #F2F4F3;
            --hero-subs-color: #F2F4F3;
            --hero-btn-color: #53503f;
        }

        :root {
            --footer-text-color: black;
            --footer-line-color: #49111C;
        }

        /* Header */

        nav {
            position: relative; /* Ensure it's positioned relative to the header */
            height: 90px; /* Adjust height for logo fit */
            background: linear-gradient(90deg, #0A0908, #49111C);
            display: flex;
            align-items: center;
            justify-content: space-between; /* Spread items horizontally */
            padding: 0 20px;
        }

        /* Logo */
        .logo {
            display: flex;
            align-items: center;
            margin-right: auto; /* Push the logo to the left */
            margin-left: 100px;
        }

        .logo-img {
            height: 70px; /* Fixed height for logo */
            width: auto; /* Maintain aspect ratio */
        }

        /*Nav Menu*/
        .nav-wrapper {
            display: flex;
            flex-grow: 1;
            padding: 0;
            justify-content: flex-end;
        }

            .nav-wrapper ul {
                margin: 0;
                padding: 0;
                display: flex;
                align-items: center; /* Align items vertically */
                list-style: none;
                font-family: Montserrat-Medium;
            }

                .nav-wrapper ul li {
                    margin-right: 50px; /* Add spacing between nav items */
                }

                    .nav-wrapper ul li a {
                        font-size: 15px;
                        color: var(--nav-text-color);
                        padding: 0 5px; /* Space between links */
                        text-decoration: none;
                    }

                        .nav-wrapper ul li a:hover {
                            color: var(--nav-hover-color);
                            background-color: transparent;
                        }

                    .nav-wrapper ul li:active a {
                        color: #A9927D;
                    }

        /*Sidenav - responsive menu*/
        i {
            margin-top: 10px;
            margin-right: 50px;
        }

        .sidenav {
            background-color: white;
        }

            .sidenav li {
                margin-top: 20px;
            }

                .sidenav li a {
                    font-weight: 500;
                    font-size: 15px;
                }

                    .sidenav li a:hover {
                        color: #49111C;
                        background-color: #a9927d;
                    }

        /*Custom Scrollbar*/
        /* width */
        ::-webkit-scrollbar {
            width: 15px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #49111C;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

        /* Footer Styling */
        footer {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            font-family: Montserrat-Medium;
        }

        .page-footer {
            background-color: white;
            margin-top: -10px;
            margin-bottom: 10px;
        }

        .footer-container {
            max-width: 100%; /* Prevent any child from overflowing */
            margin: 0 auto; /* Center the container */
            padding: 0 15px; /* Add some horizontal padding */
            display: flex;
            justify-content: space-between; /* Space out logo and links */
            align-items: center; /* Vertically center items */
            flex-wrap: wrap; /* Wrap items to the next line if needed */
        }


        .footer-logo {
            flex: 0 0 auto; /* Prevents the logo from growing/shrinking */
            margin-left: 80px;
        }

        .footer-img {
            height: 90px; /* Adjust height as needed */
            width: auto; /* Maintain aspect ratio */
        }

        .footer-links {
            flex: 0 0 auto; /* Prevents the links from growing/shrinking */
            margin-right: 80px;
        }

            .footer-links ul {
                padding: 0;
                list-style: none;
                display: flex;
                flex-direction: column; /* Stack items vertically */
                gap: 10px; /* Add space between the links */
            }

                .footer-links ul li a {
                    color: #333; /* Link color */
                    text-decoration: none; /* Remove underline */
                    font-size: 14px; /* Adjust font size */
                    font-weight: 300;
                }

                    .footer-links ul li a:hover {
                        color: #800020; /* Highlight color */
                    }

        /*Copyright*/
        .copyright {
            margin: 0;
            background-color: #808080;
            text-align: center; /* Centers the text horizontally */
            padding: 10px 0; /* Adds vertical spacing */
            color: white; /* Ensures text is readable */
        }

            .copyright p {
                margin: 0 0 0 0;
                padding: 0 0 0 0;
            }
    </style>
</head>

<body ng-app="FinalsApplication" ng-controller="FinalsController">
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>
    <script src="~/Scripts/registerlogin.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Sidenav
            const elems = document.querySelectorAll('.sidenav');
            M.Sidenav.init(elems, { edge: 'right' });
        });
    </script>

</body>
</html>
