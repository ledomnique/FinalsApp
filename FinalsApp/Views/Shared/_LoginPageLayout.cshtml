<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/Content/img/vecteezy_watercolor-painted-feather_11904796.png" rel="icon">

    <!-- Materialize and SweetAlert -->
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>

        /* Fonts */
        @@font-face {
            font-family: 'DellaRespira-Regular';
            src: url(/Content/fonts/DellaRespira-Regular.ttf);
        }

        @@font-face {
            font-family: 'Montserrat-Regular';
            src: url(/Content/fonts/Montserrat-Regular.ttf);
        }

        @@font-face {
            font-family: 'Montserrat-Medium';
            src: url(/Content/fonts/Montserrat-Medium.ttf);
        }

        @@font-face {
            font-family: 'Montserrat-MediumItalic';
            src: url(/Content/fonts/Montserrat-MediumItalic.ttf);
        }

        @@font-face {
            font-family: 'Montserrat-Bold';
            src: url(/Content/fonts/Montserrat-Bold.ttf);
        }

        @@font-face {
            font-family: 'NTR-Regular';
            src: url(/Content/fonts/NTR-Regular.ttf);
        }

        body {
            margin: 0;
            padding: 0;
        }

        .login {
            position: relative;
            background: url('/Content/img/loginbg.jpg') no-repeat center center fixed;
            background-color: rgba(0, 0, 0, 0.5);
            background-blend-mode: overlay;
            background-size: cover; /* Ensures the image covers the entire section */
            min-height: 100vh; /* Full viewport height */
            display: flex;
            background-position: center;
            align-items: center; /* Vertically center the content */
            justify-content: center; /* Horizontally center the content */
        }

         .login-container {
            flex: 1;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 30px;
            padding: 130px;
            width: 100%;
        }

        .register-section {
            color: #f4f4f4;
            padding: 30px;
            max-width: 400px;
            margin-left: 150px
        }

        .register-title {
            font-family: 'DellaRespira-Regular';
            font-size: 35px;
            margin-bottom: 20px;
        }

        .register-p {
            font-family: "Montserrat-Regular", sans-serif;
        }

        .register-p a {
            color: white;
            text-decoration: underline;
        }

        .waves-effect.waves-light.btn {
            background-color: #53503F;
            font-family: 'Montserrat-Regular';
            text-transform: none;
            font-weight: bolder;
            border-radius: 50px;
            margin-top: 30px;
        }

        .signin-card {
            background-color: rgba(169, 146, 125, 0.6);
            padding: 20px;
            border-radius: 40px;
            color: white;
            max-width: 550px;
            width: 100%;
            min-height: 100px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-right: 150px;
        }

        .signin-title {
            font-family: 'DellaRespira-Regular';
        }

        .waves-effect.waves-light.btn-small {
            font-family: 'NTR-Regular';
            color: black;
            background-color: white;
            border-radius: 50px;
            width: 20%;
            margin-top: 20px;

        }

        i {
            margin-top: 10px;
            margin-right: 50px;
        }


        /*NAVBAR*/
        :root {
            --nav-color: #49111C;
            --nav-hover-color: #a9927d;
            --nav-text-color: #F2F4F3;
            --hero-title-color: #F2F4F3;
            --hero-subs-color: #F2F4F3;
            --hero-btn-color: #53503f;
            --footer-text-color: black;
            --footer-line-color: #49111C;
        }

        nav {
            background: linear-gradient(90deg, #0A0908, #49111C);
            height: 90px;
            display: flex;
            align-items: center;
            padding: 0 20px;
        }

        .logo {
            display: flex;
            align-items: center;
            margin-right: auto;
            margin-left: 100px;
        }

        .logo-img {
            height: 70px;
            width: auto;
        }

        .nav-wrapper {
            display: flex;
            flex-grow: 1;
            justify-content: flex-end;
        }

            .nav-wrapper ul {
                margin: 0;
                padding: 0;
                display: flex;
                align-items: center;
                list-style: none;
                font-family: Montserrat-Medium;
            }

                .nav-wrapper ul li {
                    margin-right: 50px;
                }

                    .nav-wrapper ul li a {
                        font-size: 15px;
                        color: var(--nav-text-color);
                        padding: 0 5px;
                        text-decoration: none;
                    }

                        .nav-wrapper ul li a:hover {
                            color: var(--nav-hover-color);
                            background-color: transparent;
                        }

                    .nav-wrapper ul li:active a {
                        color: #A9927D;
                    }

        /*Sidenav - responsive menu*/
        .sidenav {
            background-color: antiquewhite;
        }

            .sidenav li {
                margin-top: 20px;
            }

                .sidenav li a {
                    font-weight: 500;
                    font-size: 15px;
                }

                    .sidenav li a:hover {
                        color: #49111C;
                        background-color: #a9927d;
                    }

        ::-webkit-scrollbar {
            width: 15px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #49111C;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

        /* Footer Styling */
        .row {
            flex: 1; /* Makes the main content take up available space */
        }

        footer {
            margin-top: auto; /* Push the footer to the bottom */
            padding: 0; /* Ensure no extra padding */
            overflow-x: hidden;
            font-family: Montserrat-Medium;
        }

        .page-footer {
            background-color: white;
            margin-top: 0;
            margin-bottom: 0;
            padding: 20px 0; /* Add some vertical padding */
        }

        .footer-container {
            max-width: 100%;
            margin: 0 auto;
            padding: 0 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .footer-logo {
            flex: 0 0 auto;
            margin-left: 80px;
        }

        .footer-img {
            height: 90px;
            width: auto;
        }

        .footer-links {
            flex: 0 0 auto;
            margin-right: 80px;
        }

            .footer-links ul {
                padding: 0;
                list-style: none;
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

                .footer-links ul li a {
                    color: #333;
                    text-decoration: none;
                    font-size: 14px;
                    font-weight: 300;
                }

                    .footer-links ul li a:hover {
                        color: #800020;
                    }

        /*Copyright*/
        .copyright {
            margin: 0;
            background-color: #808080;
            text-align: center; /* Centers the text horizontally */
            padding: 10px 0; /* Adds vertical spacing */
            color: white; /* Ensures text is readable */
        }

            .copyright p {
                margin: 0 0 0 0;
                padding: 0 0 0 0;
            }

    @@media (max-width: 992px) {
    /* Login Container Adjustments */
    .login-container {
        flex-direction: column;
        padding: 20px;
        gap: 30px;
        justify-content: center;
        align-items: center;
    }

    .register-section {
        margin-left: 0;
        text-align: center;
        max-width: 100%;
    }

    .signin-card {
        margin-right: 0;
        padding: 20px;
        max-width: 100%;
    }

    /* SignIn Card Adjustments */
    .signin-title {
        font-size: 28px;
        text-align: center;
    }

    /* Make Inputs Full Width */
    .signin-card .input-field {
        width: 100%;
    }

    .waves-effect.waves-light.btn-small {
        width: 50%;
        font-size: 16px;
    }

    /* Navbar Adjustments */
    .nav-wrapper ul {
        display: none;
    }

    .sidenav {
        display: block;
    }

    /* Footer Adjustments */
    .footer-container {
        flex-direction: column;
        text-align: center;
        padding: 20px;
    }

    .footer-links ul {
        flex-direction: column;
        align-items: center;
    }

    .footer-links ul li {
        margin: 10px 0;
    }

    .footer-logo {
        margin-left: 0;
        margin-bottom: 20px;
    }
}

/* For Small Screens (Phones) */

@@media (max-width: 600px) {
    /* Mobile Navbar Adjustments */
    nav {
        padding: 0 10px;
        height: 60px;
    }

    .logo-img {
        height: 50px;
    }

    /* Ensure input fields are easier to use on mobile */
    .signin-card input[type="email"], .signin-card input[type="password"] {
        padding: 15px;
    }

    .signin-card {
        max-width: 90%;
    }

    .register-title {
        font-size: 28px;
    }

    .signin-title {
        font-size: 24px;
        text-align: center;
    }

    .waves-effect.waves-light.btn-small {
        width: 70%;
    }
}

/* For Extra Small Screens (Portrait Phones) */
@@media (max-width: 400px) {
    /* Further adjustments for very small screens */
    .signin-title {
        font-size: 20px;
    }

    .register-title {
        font-size: 24px;
    }

    .signin-card {
        padding: 15px;
    }

    .waves-effect.waves-light.btn-small {
        width: 80%;
    }
}
    </style>
</head>

<body ng-app="FinalsApplication" ng-controller="FinalsController">
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Sidenav
            const elems = document.querySelectorAll('.sidenav');
            M.Sidenav.init(elems, { edge: 'right' });
        });
    </script>

</body>
</html>
