<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" />
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/Content/img/vecteezy_watercolor-painted-feather_11904796.png" rel="icon">
    <!-- Materialize and SweetAlert -->
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>

        /* Fonts */
        @@font-face {
            font-family: 'DellaRespira-Regular';
            src: url(/Content/fonts/DellaRespira-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Regular';
            src: url(/Content/fonts/Montserrat-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Medium';
            src: url(/Content/fonts/Montserrat-Medium.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-MediumItalic';
            src: url(/Content/fonts/Montserrat-MediumItalic.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Bold';
            src: url(/Content/fonts/Montserrat-Bold.ttf)
        }

        @@font-face {
            font-family: 'NTR-Regular';
            src: url(/Content/fonts/NTR-Regular.ttf)
        }


        body {
            margin: 0;
            padding: 0;
            font-family: Montserrat-Regular;
        }

        .userprofile {
            position: relative;
            background: url('/Content/img/login-bg.jpg') no-repeat center center fixed;
            background-color: rgba(0, 0, 0, 0.5);
            background-blend-mode: overlay;
            background-size: cover; /* Ensures the image covers the entire section */
            min-height: 100vh; /* Full viewport height */
            display: flex;
            background-position: center;
            align-items: center; /* Vertically center the content */
            justify-content: center; /* Horizontally center the content */
        }

        header {
            position: sticky; /* Keeps it at the top of the page */
            top: 0;
            z-index: 1000;
        }

        /* Keep the profile container styling as it is */
        .profile-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%); /* Centers the container */
            background: #F2F4F3;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 400px;
            padding: 20px;
            text-align: center;
        }

        .profile-header h1 {
            margin-bottom: 20px;
            font-size: 1.8em;
            color: #0A0908;
            font-weight: bold;
        }

        /* Profile details section */
        .profile-details p {
            font-size: 1.1em;
            margin: 10px 0;
            color: #0A0908;
        }

        .profile-details span {
            color: #53503F;
            font-weight: bold;
        }

        /* Edit button */
        .edit-password-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #007bff;
            color: #F2F4F3;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .edit-password-btn:hover {
                background-color: #A9927D;
                transform: scale(1.05);
            }

        /* Password form styling */
        .update-password-form {
            margin-top: 30px;
            text-align: left;
        }

            .update-password-form h2 {
                margin-bottom: 15px;
                font-size: 1.5em;
                color: #49111C;
            }

            .update-password-form label {
                display: block;
                margin: 10px 0 5px;
                font-weight: bold;
                color: #53503F;
            }

            .update-password-form input {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #A9927D;
                border-radius: 8px;
                font-size: 1em;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                transition: border-color 0.3s;
            }

                .update-password-form input:focus {
                    border-color: #49111C;
                    outline: none;
                }

            .update-password-form button {
                width: 100%;
                padding: 12px;
                background-color: #49111C;
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 1.1em;
                font-weight: bold;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .update-password-form button:hover {
                    background-color: #A9927D;
                    transform: translateY(-2px);
                }

        /* Hide elements with the hidden class */
        .hidden {
            display: none;
        }

        /* Root components */
        :root {
            /*Navbar color elements*/
            --nav-color: #49111C;
            --nav-hover-color: #a9927d;
            --nav-text-color: #F2F4F3;
        }

        :root {
            /*Main color elements*/
            --hero-title-color: #F2F4F3;
            --hero-subs-color: #F2F4F3;
            --hero-btn-color: #53503f;
        }

        :root {
            --footer-text-color: black;
            --footer-line-color: #49111C;
        }

        /* Header */

        nav {
            position: relative; /* Ensure it's positioned relative to the header */
            height: 90px; /* Adjust height for logo fit */
            background: linear-gradient(90deg, #0A0908, #49111C);
            display: flex;
            align-items: center;
            justify-content: space-between; /* Spread items horizontally */
            padding: 0 20px;
        }

        /* Logo */
        .logo {
            display: flex;
            align-items: center;
            margin-right: auto; /* Push the logo to the left */
            margin-left: 100px;
        }

        .logo-img {
            height: 70px; /* Fixed height for logo */
            width: auto; /* Maintain aspect ratio */
        }

        /*Nav Menu*/
        .nav-wrapper {
            display: flex;
            flex-grow: 1;
            padding: 0;
            justify-content: flex-end;
        }

            .nav-wrapper ul {
                margin: 0;
                padding: 0;
                display: flex;
                align-items: center; /* Align items vertically */
                list-style: none;
                font-family: Montserrat-Medium;
            }

                .nav-wrapper ul li {
                    margin-right: 50px; /* Add spacing between nav items */
                }

                    .nav-wrapper ul li a {
                        font-size: 15px;
                        color: var(--nav-text-color);
                        padding: 0 5px; /* Space between links */
                        text-decoration: none;
                    }

                        .nav-wrapper ul li a:hover {
                            color: var(--nav-hover-color);
                            background-color: transparent;
                        }

                    .nav-wrapper ul li:active a {
                        color: #A9927D;
                    }

        /*Sidenav - responsive menu*/
        i {
            margin-top: 10px;
            margin-right: 50px;
        }

        .sidenav {
            background-color: antiquewhite;
        }

            .sidenav li {
                margin-top: 20px;
            }

                .sidenav li a {
                    font-weight: 500;
                    font-size: 15px;
                }

                    .sidenav li a:hover {
                        color: #49111C;
                        background-color: #a9927d;
                    }

        /*Custom Scrollbar*/
        /* width */
        ::-webkit-scrollbar {
            width: 15px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #49111C;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>
</head>

<body ng-app="FinalsApplication" ng-controller="FinalsController">
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>
    <script src="~/Scripts/userprofile.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Sidenav
            const elems = document.querySelectorAll('.sidenav');
            M.Sidenav.init(elems, { edge: 'right' });
        });
    </script>

</body>
</html>
