<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/img/vecteezy_watercolor-painted-feather_11904796.png" rel="icon">

    <!-- DataTables -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/2.1.8/css/dataTables.bootstrap5.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

    <style>
        /* Root components */
        :root {
            /*Navbar color elements*/
            --nav-color: #49111C;
            --nav-hover-color: #a9927d;
            --nav-text-color: #F2F4F3;
        }

        :root {
            /*Main color elements*/
            --hero-title-color: #F2F4F3;
            --hero-subs-color: #F2F4F3;
            --hero-btn-color: #53503f;
        }

        :root {
            --footer-text-color: black;
            --footer-line-color: #49111C;
        }

        /* Fonts */
        @@font-face {
            font-family: 'DellaRespira-Regular';
            src: url(/Content/fonts/DellaRespira-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Regular';
            src: url(/Content/fonts/Montserrat-Regular.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Medium';
            src: url(/Content/fonts/Montserrat-Medium.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-MediumItalic';
            src: url(/Content/fonts/Montserrat-MediumItalic.ttf)
        }

        @@font-face {
            font-family: 'Montserrat-Bold';
            src: url(/Content/fonts/Montserrat-Bold.ttf)
        }

        @@font-face {
            font-family: 'NTR-Regular';
            src: url(/Content/fonts/NTR-Regular.ttf)
        }

        body {
            margin: 0;
            padding: 0;
        }

        /* Header */

        nav {
            background: linear-gradient(90deg, #0A0908, #49111C);
            height: 90px; /* Adjust to fit the logo perfectly */
            display: flex;
            align-items: center; /* Vertically align items */
            padding: 0 20px; /* Add horizontal padding for better spacing */
        }

        /* Logo */
        .logo {
            display: flex;
            align-items: center;
            margin-right: auto; /* Push the logo to the left */
            margin-left: 100px;
        }

        .logo-img {
            height: 70px; /* Fixed height for logo */
            width: auto; /* Maintain aspect ratio */
        }

        /*Nav Menu*/
        .nav-wrapper {
            display: flex;
            flex-grow: 1;
            padding: 0;
            justify-content: flex-end;
        }

        .nav-wrapper ul {
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center; /* Align items vertically */
            list-style: none;
            font-family: Montserrat-Medium;
        }

        .nav-wrapper ul li {
            margin-right: 50px; /* Add spacing between nav items */
        }

        .nav-wrapper ul li a {
            font-size: 15px;
            color: var(--nav-text-color);
            padding: 0 5px; /* Space between links */
            text-decoration: none;
        }

        .nav-wrapper ul li a:hover {
            color: var(--nav-hover-color);
            background-color: transparent;
        }

        .nav-wrapper ul li:active a {
            color: #A9927D;
        }

        /* Dropdown Menu */
        .dropdown {
            position: relative;
            display: inline-block;
            margin-right: -20px;
        }

        .dropdown-menu {
            visibility: hidden; /* Hidden by default */
            position: absolute;
            top: 90%; /* Position below the trigger */
            left: -30px;
            background-color: #0A0908; /* White background */
            border: 0px; /* Light border */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Optional shadow */
            padding: 0; /* No padding */
            margin: 0; /* No margin */
            list-style: none; /* Remove list styling */
            z-index: 1000; /* Ensure it's above other content */
            min-width: 50px; /* Fixed width */
            border-radius: 10px; /* Smooth corners */
            overflow: hidden; /* Clip overflowing content */
        }

        /* Show dropdown menu on hover */
        .dropdown:hover .dropdown-menu {
            visibility: visible;
        }

        /* Dropdown menu items */
        .dropdown-menu li {
            margin: 0;
            padding: 0;
            font-size: 10px;
            padding-left: 15px;
        }

        .dropdown-menu li a {
            display: block;
            color: black; /* Black text color */
            text-decoration: none; /* Remove underline */
            background-color: transparent; /* White background */
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth hover transition */
        }

        #changepass {
            font-size: 14px;
            white-space: nowrap;
        }

        #logout {
            font-size: 14px;
            padding-top: -20px;
        }

        /* Hover effect for menu items */
        .dropdown-menu li a:hover {
            background-color: #e60000; /* Red hover background */
            color: #fff; /* White text on hover */
        }

        /* Optional: Disable specific items (e.g., Logout) */
        .dropdown-menu li.disabled a {
            color: #ccc; /* Light gray text */
            pointer-events: none; /* Disable clicks */
            background-color: #f9f9f9; /* Slightly gray background */
        }

        h3 {
            font-family: Montserrat-Bold;
            color: #49111C;
            margin-left: 40px;
        }

        #save-user {
            background-color: #fff;
            border: 0 solid #e2e8f0;
            border-radius: 1.5rem;
            box-sizing: border-box;
            color: #0d172a;
            cursor: pointer;
            display: inline-block;
            font-family: Montserrat-Medium;
            font-size: 1.1rem;
            font-weight: 600;
            line-height: 1;
            padding: 1rem 1.6rem;
            text-align: center;
            text-decoration: none #0d172a solid;
            text-decoration-thickness: auto;
            transition: all .1s cubic-bezier(.4, 0, .2, 1);
            box-shadow: 0px 1px 2px rgba(166, 175, 195, 0.25);
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }

        #save-user:hover {
            background-color: #1e293b;
            color: #fff;
        }

        /* General table styling */
        table {
            max-width: calc(100% - 30px); /* Ensure the table stays within the viewport */
            margin: 20px auto; /* Center the table with space on the sides */
            border-collapse: collapse;
            font-size: 16px;
            text-align: center;
        }

        /* Table headers */
        thead th {
            background-color: #a9927d; /* Blue background */
            color: #ffffff; /* White text */
            padding: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: 1px solid #dddddd;
        }

        /* Table body rows */
        tbody tr {
            border: 1px solid #dddddd;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Light grey background for even rows */
        }

        tbody tr:hover {
            background-color: #f1f1f1; /* Slightly darker grey on hover */
        }

        /* Table cells */
        td {
            padding: 10px;
            border: 1px solid #dddddd;
            word-wrap: break-word;
            text-align: center; /* Center-align cell text */
        }

        /* Add some spacing for the tables */
        #users_tbl1, #users_tbl2 {
            margin-bottom: 40px;
        }

        #delete-user {
            align-items: center;
            appearance: none;
            background-color: #49111C;
            border: 1px solid #dbdbdb;
            border-radius: .375em;
            box-shadow: none;
            box-sizing: border-box;
            color: #F2F4F3;
            cursor: pointer;
            display: inline-flex;
            font-family: Montserrat-Bold;
            font-size: 1rem;
            height: 2.5em;
            justify-content: center;
            line-height: 1.5;
            padding: calc(.5em - 1px) 1em;
            position: relative;
            text-align: center;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            vertical-align: top;
            white-space: nowrap;
        }

        #delete-user:active {
            border-color: #4a4a4a;
            outline: 0;
        }

        #delete-user:focus {
            border-color: #485fc7;
            outline: 0;
        }

        #delete-user:hover {
            border-color: #b5b5b5;
        }

        #delete-user:focus:not(:active) {
            box-shadow: rgba(72, 95, 199, .25) 0 0 0 .125em;
        }

        /*Sidenav - responsive menu*/
        i {
            margin-top: 10px;
            margin-right: 50px;
        }

        .sidenav {
            background-color: white;
        }

        .sidenav li {
            margin-top: 20px;
        }

        .sidenav li a {
            font-weight: 500;
            font-size: 15px;
        }

        .sidenav li a:hover {
            color: #49111C;
            background-color: #a9927d;
        }

        /* Admin Dash Side Nav */
        .custom-sidenav {
            position: fixed;
            top: 64px; /* Adjust for the height of your navbar */
            left: 0;
            width: 200px; /* Width of the sidenav */
            height: calc(100vh - 64px); /* Full height minus the navbar */
            background-color: #f5f5f5; /* Light background */
            padding: 20px 10px;
            border-right: 1px solid #ddd; /* Optional border */
            overflow-y: auto; /* Scrollable if content overflows */
            z-index: 1000; /* Ensure it's on top */
        }

        /* Main Content */
        .content-wrapper {
            margin-left: 200px; /* Match the width of the sidenav */
            padding: 20px;
        }

        .main-content {
            margin-top: 20px;
        }

        /*Custom Scrollbar*/
        /* width */
        ::-webkit-scrollbar {
            width: 15px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #0A0908;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>

</head>
<body ng-app="FinalsApplication" ng-controller="FinalsController">
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>

    <script src="~/Scripts/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!-- data tables -->
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.bootstrap5.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Sidenav
            const elems = document.querySelectorAll('.sidenav');
            M.Sidenav.init(elems, { edge: 'right' });
        });

        $(document).ready(function () {
            $('#users_tbl').DataTable();
        });

        document.querySelectorAll('.dropdown').forEach(dropdown => {
            dropdown.addEventListener('mouseenter', () => {
                document.querySelector('.dropdown-menu').style.display = 'block'; // This would force it to display
            });
            dropdown.addEventListener('mouseleave', () => {
                dropdown.querySelector('.dropdown-menu').style.display = 'none';
            });
        });

        document.querySelectorAll('.dropdown-trigger').forEach(trigger => {
            trigger.addEventListener('click', function (e) {
                e.preventDefault();
                const menu = this.nextElementSibling;
                menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
            });
        });

    </script>
</body>
</html>
