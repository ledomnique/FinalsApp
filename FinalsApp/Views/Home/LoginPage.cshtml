@{
    Layout = "~/Views/Shared/_LoginPageLayout.cshtml";
    ViewBag.Title = "Login";
}

<body>
    <!--Navigation Bar-->
    <header class="header">
        <div class="navbar-fixed">
            <nav class="z-depth-4">
                <div class="nav-wrapper">
                    <a href="@Url.Action("Homepage", "Home")" class="logo">
                        <img src="~/Content/img/white-logo.png" class="logo-img" />
                    </a>
                    <!-- Sidenav Trigger (Hamburger Icon) -->
                    <a href="#" data-target="mobile-demo" class="sidenav-trigger">
                        <i class="material-icons">menu</i>
                    </a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="@Url.Action("Homepage", "Home")">Home</a></li>
                        <li><a href="@Url.Action("FindBook","Home")">Find A Book</a></li>
                        <li><a href="@Url.Action("RequestBook","Home")">Request A Book</a></li>
                        <li><a href="@Url.Action("RegisterPage", "Home")">Register</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Sidenav for Mobile -->
    <ul class="sidenav right-aligned" id="mobile-demo">
        <li><a href="@Url.Action("Homepage", "Home")">Home</a></li>
        <li><a href="@Url.Action("FindBook", "Home")">Find A Book</a></li>
        <li><a href="@Url.Action("RequestBook","Home")">Request A Book</a></li>
        <li><a href="@Url.Action("LoginPage", "Home")">Login</a></li>
    </ul>

    <main>
        <section class="login">
            <div class="row" style="margin-top: 50px;">
                <div class="login-container">
                    <div class="register-section">
                        <h1 class="register-title">Create New Account</h1>
                        <p class="register-p">Explore an endless library of stories waiting to be discovered. From timeless classics to fresh new reads,</p>
                        <p class="register-p">
                            <a href="@Url.Action("RegisterPage", "Home")">Register here.</a>
                        </p>
                        <a href="#" class="waves-effect waves-light btn">Learn More</a>
                    </div>

                    <div class="signin-card">
                        <h2 class="signin-title">Sign In</h2>
                        <div class="input-field">
                            <i class="material-icons prefix" style="color: #ffffff;">account_box</i>
                            <input id="uEmail" type="email" class="validate" ng-model="credentials.userEmail" required>
                            <label for="uEmail" style="color: #ffffff;">Email</label>
                        </div>

                        <div class="input-field">
                            <i class="material-icons prefix" style="color: #ffffff;">lock</i>
                            <input id="uPassword" type="password" class="validate" ng-model="credentials.userPassword" required>
                            <label for="uPassword" style="color: #ffffff;">Password</label>
                        </div>
                        <a class="waves-effect waves-light btn-small" ng-click="login()">Login</a>
                        <p class="error" ng-if="loginError" style="color: red;">{{loginError}}</p>
                    </div>
                </div>
            </div>
        </section>
    </main>


    <!-- Footer -->
    <footer class="page-footer bg-white">
        <div class="footer-container d-flex align-items-center justify-content-between">
            <!-- Logo Section -->
            <div class="footer-logo">
                <img src="~/Content/img/footer-logo.png" class="footer-img" alt="Footer Logo" />
            </div>

            <!-- Links Section -->
            <div class="footer-links">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a href="#">About Us</a></li>
                    <li class="list-inline-item"><a href="#">Terms & Conditions</a></li>
                    <li class="list-inline-item"><a href="#">Contact Us</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright white-text">
            <p>© <span>2024</span> <strong class="px-1 sitename">Inkling</strong> <span>All Rights Reserved</span></p>
        </div>
    </footer>
</body>
