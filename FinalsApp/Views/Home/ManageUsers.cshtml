        <h3>Users Table</h3>
        <table id="users_tbl1" class="display">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Joined On</th>
                    <th>Action</th>


                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in userData">
                    <td><b>{{user.userID}}</b></td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.joined_on | date: shortDate}}</td>
                    <td><button id="delete-user" ng-click="deleteBook(user.userID,$index)">Delete User</button></td>
                </tr>
            </tbody>
        </table>
    </section>

    <br style="margin-top: 20px;" />

    <h3>Admin Users Table</h3>
    <table id="users_tbl2" class="display">
        <thead>
            <tr>
                <th>Admin ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Account Created On</th>

            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in adminData">
                <td><b>{{user.adminID}}</b></td>
                <td>{{user.userName}}</td>
                <td>{{user.email}}</td>
                <td>{{user.created_on | date: shortDate}}</td>
            </tr>
        </tbody>
    </table>


